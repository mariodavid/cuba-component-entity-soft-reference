<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.entitysoftreference.web.example.customer.CustomerEdit"
        datasource="customerDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.entitysoftreference.web.example.customer">
    <dsContext>
        <datasource id="customerDs"
                    class="de.diedavids.cuba.entitysoftreference.example.Customer"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <buttonsPanel>
            <button id="createComment"
                    caption="Create Comment"
                    invoke="createComment"/>
        </buttonsPanel>
        <fieldGroup id="fieldGroup"
                    datasource="customerDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
